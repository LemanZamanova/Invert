@model Position

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Position</h4>

                <form method="post"  class="forms-sample">
                    <div class="form-group">
                        <label asp-for="Name" for="exampleInputName1">Name</label>
                        <input asp-for="Name" type="text" class="form-control" id="exampleInputName1" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                   
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button type="button" onclick="window.location.href='@Url.Action("Index", "Position")'" class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>