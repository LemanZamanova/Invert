@using Invert.Models
@model List<Position>
@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Position Table</h4>
                <a asp-action="Create" class="btn btn-success">Create</a>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Position
                                </th>
                                <th>
                                    Employee count
                                </th>
                               
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Position position in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                       @position.Name
                                    </td>
                                    <td >
                                       @position.Employees.Count
                                    </td>

                                   

                                    <td>
                                        <a asp-action="update" asp-route-id="@position.Id" class="btn btn-warning"><i class="mdi mdi-pencil"></i></a>
                                        <a asp-action="delete" asp-route-id="@position.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                        <a asp-action="detail" asp-route-id="@position.Id" class="btn btn-primary"><i class="mdi mdi-open-in-new"></i></a>
                                    </td>
                                </tr>



                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>